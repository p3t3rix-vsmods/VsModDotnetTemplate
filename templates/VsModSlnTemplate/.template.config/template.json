{
    "$schema": "http://json.schemastore.org/template",
    "author": "P3t3rix",
    "classifications": [
        "Vintage Story",
        "Mod"
    ],
    "identity": "P3t3rix.VsModSlnTemplate",
    "name": "Vintage Story solution mod template",
    "shortName": "vsmodsln",
    "sourceName": "VsModSlnTemplate",
    "preferNameDirectory": true,
    "sources": [
        {
            "condition": "(visual-studio)",
            "exclude": [ "**/[Bb]in/**", "**/[Oo]bj/**", ".template.config/**/*", "**/*.filelist", "**/*.lock.json" ]
        }
    ],
    "symbols": {
        "visual-studio": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "true"
        },
        "visual-studio-code": {
            "type": "parameter",
            "datatype": "bool",
            "defaultValue": "false"
        },
        "vs-dir": {
            "type": "parameter",
            "defaultValue": "$(VINTAGE_STORY)",
            "description": "The game directory of vintage story -- NOT RECOMMENDED -- Better use environment variables",
            "replaces": "{{TEMPLATE-VSDIR}}"
        },
        "vs-data-dir": {
            "type": "parameter",
            "defaultValue": "$(VINTAGE_STORY_DATA)",
            "description": "The data directory of vintage story -- NOT RECOMMENDED -- Better use environment variables",
            "replaces": "{{TEMPLATE-VSDATADIR}}"
        },
    }
}